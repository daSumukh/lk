{
  "build": { "dockerfile": "Dockerfile"},
  "customizations": {
    "vscode": {
      "settings": {
        "window.menuBarVisibility" : "visible",
        "editor.fontSize": 14,
        "terminal.integrated.fontSize": 14,
        "workbench.iconTheme": "vs-seti",
        "editor.minimap.enabled": false,
        "workbench.colorTheme": "GitHub Dark",
        "workbench.preferredDarkColorTheme": "GitHub Dark",
        "editor.wordWrapColumn": 120,
        "workbench.startupEditor": "none",
        "editor.useTabStops": false,
        "files.trimTrailingWhitespace": true,
        "git.autorefresh": false,
        "terminal.integrated.cursorBlinking": true,
        "terminal.integrated.cursorStyle": "line",
        "debug.console.fontSize": 14,
        "editor.rulers": [
            120
        ],
        "terminal.integrated.sendKeybindingsToShell": true,
        "extensions.ignoreRecommendations": true,
        "workbench.layoutControl.type": "both",
        "window.commandCenter": true,
        "window.density.editorTabHeight": "default"
      },
      "extensions": [
		    "ms-vscode.cpptools"
	    ]
    }
  },
  "postCreateCommand": "cd /workspaces/ && wget https://armkeil.blob.core.windows.net/developer/Files/downloads/gnu/12.3.rel1/binrel/arm-gnu-toolchain-12.3.rel1-x86_64-aarch64-none-elf.tar.xz && tar -xvf arm-gnu-toolchain-12.3.rel1-x86_64-aarch64-none-elf.tar.xz"
}